<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- === BEAT THE BANK THEME === -->
    <!-- Gold & Green game-show palette -->

    <!-- Primary: Rich Gold -->
    <Color x:Key="Primary">#C8960C</Color>
    <Color x:Key="PrimaryDark">#A67A08</Color>
    <Color x:Key="PrimaryLight">#F5D060</Color>

    <!-- Secondary: Money Green -->
    <Color x:Key="Secondary">#1B8A4A</Color>
    <Color x:Key="SecondaryDark">#14693A</Color>
    <Color x:Key="SecondaryLight">#2ECC71</Color>

    <!-- Tertiary: Deep Vault -->
    <Color x:Key="Tertiary">#1A1A2E</Color>

    <!-- Accent: Alarm Red / Jackpot Glow -->
    <Color x:Key="Danger">#E74C3C</Color>
    <Color x:Key="JackpotGlow">#FFD700</Color>

    <!-- Neutrals -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Gray100">#E8E8E8</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#1A1A1A</Color>
    <Color x:Key="Gray950">#121212</Color>

    <!-- Surface colors for cards/backgrounds -->
    <Color x:Key="SurfaceLight">#FFF9E6</Color>
    <Color x:Key="SurfaceDark">#1E1E2D</Color>
    <Color x:Key="CardLight">#FFFFFF</Color>
    <Color x:Key="CardDark">#262636</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <!-- Legacy accent keys (kept for compatibility) -->
    <Color x:Key="Yellow100Accent">#F5D060</Color>
    <Color x:Key="Yellow200Accent">#FFE08A</Color>
    <Color x:Key="Yellow300Accent">#FFF0C0</Color>
    <Color x:Key="Cyan100Accent">#2ECC71</Color>
    <Color x:Key="Cyan200Accent">#58D68D</Color>
    <Color x:Key="Cyan300Accent">#ABEBC6</Color>
    <Color x:Key="Blue100Accent">#C8960C</Color>
    <Color x:Key="Blue200Accent">#E0B840</Color>
    <Color x:Key="Blue300Accent">#F5D060</Color>

</ResourceDictionary>
