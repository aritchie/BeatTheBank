<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:beatthebank="clr-namespace:BeatTheBank"
             x:DataType="beatthebank:MainViewModel"
             x:Class="BeatTheBank.MainPage"
             Title="Beat The Bank">

    <VerticalStackLayout>
        <Entry Text="{Binding Name}" Placeholder="Name" />
        <Label Text="{Binding Vault, StringFormat='Vault: {0}'}" />
        <Label Text="{Binding Amount, StringFormat='Current Amount: ${0}'}" />
        <Label Text="{Binding StopVault, StringFormat='Stop Vault: {0}'}" />
        <Label Text="{Binding WinAmount, StringFormat='Stop Amount: ${0}'}" />
        <Label Text="{Binding Status, StringFormat='Status: {0}'}" />

        <Button Text="{Binding SpeechText}" Command="{Binding SpeechCommand}" />
        <Button Text="Start" Command="{Binding StartOverCommand}" />
        <Button Text="Continue" Command="{Binding ContinueCommand}" />
        <Button Text="Stop" Command="{Binding StopCommand}" />

        <Button Text="Jackpot Sound" Command="{Binding PlaySoundCommand}" CommandParameter="win" />
        <Button Text="Lose Sound" Command="{Binding PlaySoundCommand}" CommandParameter="lose" />
    </VerticalStackLayout>
</ContentPage>

