<?xml version="1.0" encoding="utf-8"?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:BeatTheBank"
       Shell.FlyoutBehavior="Disabled"
       Shell.TabBarBackgroundColor="{StaticResource Tertiary}"
       Shell.TabBarForegroundColor="{StaticResource JackpotGlow}"
       Shell.TabBarTitleColor="{StaticResource JackpotGlow}"
       Shell.TabBarUnselectedColor="{StaticResource Gray400}"
       x:Class="BeatTheBank.AppShell"
       x:DataType="local:AppShell">

    <TabBar>
        <ShellContent
            Title="Play"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Leaderboard"
            ContentTemplate="{DataTemplate local:LeaderboardPage}"
            Route="LeaderboardPage" />
    </TabBar>
</Shell>
